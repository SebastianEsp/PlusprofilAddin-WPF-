<UserControl
	x:Class="PlusprofilAddin.Views.TaggedValueListGroupingControl"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:PlusprofilAddin.Views"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	d:DataContext="{d:DesignInstance}"
	mc:Ignorable="d">
	<ItemsControl
		Padding="0,6,0,6"
		HorizontalContentAlignment="Stretch"
		BorderThickness="0"
		ItemsSource="{Binding Path=Tag, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:TaggedValueListGroupingControl}}}"
		KeyboardNavigation.IsTabStop="False"
		KeyboardNavigation.TabNavigation="Continue"
		ScrollViewer.HorizontalScrollBarVisibility="Disabled"
		ScrollViewer.VerticalScrollBarVisibility="Disabled">
		<ItemsControl.ItemTemplate>
			<DataTemplate>
				<local:TaggedValueListControl />
			</DataTemplate>
		</ItemsControl.ItemTemplate>
	</ItemsControl>
</UserControl>